<div class="container mt-5 mb-3">
	<div class="row">
		{{#each jobs}}
			<a
				href={{this.detail_link}}
				class="card-link"
				style="text-decoration: none;"
			>
				<div class="col-md-4">
					<div class="card p-3 mb-2">
						<div class="d-flex justify-content-between">
							<div class="d-flex flex-row align-items-center">
								<div class="icon">
									<i class="bx bxl-mailchimp"></i>
								</div>
								<div class="ms-2 c-details">
									<h6
										class="mb-0"
									>{{this.user.organization}}</h6>
									<span>1 days ago</span>
								</div>
							</div>
							<div class="badge"> <span>Design</span> </div>
						</div>
						<div class="mt-5">
							<h3 class="heading">{{this.job_type}}<br
								/>{{this.user.location}}</h3>
							<h5> upto {{this.wage}} VNƒê </h5>
							<div class="mt-5">
								<div class="progress">
									<div
										class="progress-bar"
										role="progressbar"
										style="width: 50%"
										aria-valuenow="50"
										aria-valuemin="0"
										aria-valuemax="100"
									></div>
								</div>
								<div class="mt-3">
									<span
										class="text1"
									>{{this.application.length}}
										Applied
										<span class="text2">of 50 capacity</span></span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</a>
		{{/each}}
	</div>
</div>